<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleQuestionFragment"
    android:id="@+id/singlequestionfragment"
    >

    <TextView
        android:id="@+id/text_view_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="boas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="25dp"
        android:layout_weight="0.4"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/lin1"
            android:layout_width="fill_parent"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/button_top_left"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white"
                android:layout_width="10dip"
                android:layout_margin="5dp"
                android:layout_height="fill_parent"
                android:text="Marega"
                android:layout_weight="1.0"
                />

            <Button
                android:id="@+id/button_top_right"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white"
                android:layout_width="10dip"
                android:layout_margin="5dp"
                android:layout_height="fill_parent"
                android:text="Marega"
                android:layout_weight="1.0" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin2"
            android:orientation="horizontal"
            android:layout_below="@id/lin1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/button_bottom_left"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white"
                android:layout_width="10dip"
                android:layout_margin="5dp"
                android:layout_height="fill_parent"
                android:text="Moussa"
                android:layout_weight="1.0"
                />
            <Button
                android:id="@+id/button_bottom_right"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white"
                android:layout_width="10dip"
                android:layout_margin="5dp"
                android:layout_height="fill_parent"
                android:text="Marega"
                android:layout_weight="1.0" />
        </LinearLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>